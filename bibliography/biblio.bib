  journal = {Ecological Applications},
  keywords = {Key words:,Pelagic,generalized additive models,marine resource management,non‐linearities,pressure,stressor,thresholds,tipping points},
  mendeley-groups = {Sorting/Unification folder/New Articles 03/10},
